import java.util.Scanner;


public class NumberThoery {

	public static void perfect()
	{
		Scanner s=new Scanner(System.in);
		System.out.println("Enter The no");
		int num=s.nextInt();
		int num1;
		int num2 = 0;
		for(int i=1;i<num;i++){
			if(num%i==0){
				 num1=i;
				num2=num1+num1;	}
		}
		if(num==num2){
			System.out.println("The no is perfect no");
		}
	}
}
