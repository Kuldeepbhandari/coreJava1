import java.util.Scanner;


public class PrintPatternL {
	public static void pattern()
	{
		Scanner s=new Scanner(System.in);
		System.out.println("Enter The Value");
		int num=s.nextInt();
		for(int i=1;i<=num;i++)
		{
			for(int k=num;k>i;k--)
			{
				System.out.print(" ");
			}
			for(int j=1;j<=2*i-1;j++)
			{ 
				System.out.print("*");
			}
			System.out.println("");
		}
	}

}
